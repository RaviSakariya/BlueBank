<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5d7e2"
    tools:context="bluebankapp.swe443.bluebankappandroid.WithdrawDepositActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:text="Amount: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="44dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/editAmount"
        android:layout_marginEnd="46dp"
        app:layout_constraintRight_toRightOf="@+id/submitBtn"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editAmount"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="46dp" />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1.00"
        android:inputType="numberDecimal"
        android:layout_marginEnd="30dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="234dp"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/submitBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="49dp"

        android:background="@android:color/holo_blue_dark"
        android:onClick="doTransactionClick"
        android:text="Test"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/editAmount"
        app:layout_constraintTop_toBottomOf="@+id/editAmount"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your transaction type: "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="30dp" />

    <RadioGroup
        android:layout_width="303dp"
        android:layout_height="52dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="34dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/editAmount"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteY="147dp">

        <RadioButton
            android:id="@+id/withDrawRadio"
            style="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:buttonTint="@color/colorPrimary"
            android:onClick="onRadioButtonClicked"
            android:text="Withdraw"
            android:textSize="24sp"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <RadioButton
            android:id="@+id/depositRadio"
            style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:onClick="onRadioButtonClicked"
            android:text="Deposit"
            android:textSize="24sp"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>
