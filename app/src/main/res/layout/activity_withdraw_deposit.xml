<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5d7e2"
    tools:context="bluebankapp.swe443.bluebankappandroid.WithdrawDepositActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="46dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="46dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="7dp"
        android:text="Amount: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/editAmount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/submitBtn"
        app:layout_constraintTop_toTopOf="@+id/editAmount"
        app:layout_constraintVertical_bias="0.375"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="189dp"
        android:layout_height="42dp"
        android:layout_marginBottom="281dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="1.00"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        app:layout_constraintVertical_bias="0.966"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/submitBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="49dp"

        android:background="@android:color/holo_blue_dark"
        android:onClick="doTransactionClick"
        android:text="Withdraw"
        app:layout_constraintLeft_toLeftOf="@+id/editAmount"
        app:layout_constraintTop_toBottomOf="@+id/editAmount"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="83dp"
        android:text="Choose your transaction type: "
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.4" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:checkedButton="@+id/onCheckedButton"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/messageText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.116">

        <RadioButton
            android:id="@+id/withDrawBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/coolradiobtn"
            android:button="@null"
            android:drawableLeft="@mipmap/moneydraw"
            android:gravity="center"
            android:onClick="onRadioButtonClicked"
            android:paddingStart="10dp"
            android:text="Withdraw"
            android:textAllCaps="true"
            android:textColor="@drawable/coolradiobtncolor"
            android:paddingLeft="10dp" />

        <RadioButton
            android:id="@+id/depositBtn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="0.41"
            android:background="@drawable/coolradiobtn"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center"
            android:onClick="onRadioButtonClicked"
            android:paddingStart="10dp"
            android:text="Deposit"
            android:textAllCaps="true"
            android:textColor="@drawable/coolradiobtncolor"
            android:paddingLeft="10dp" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>
