<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5d7e2"
    tools:context="bluebankapp.swe443.bluebankappandroid.BankMainActivity">

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:onClick="logOutClick"
        android:text="Sign Out"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentBalanceTxt"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/currentBalanceTxt"
        android:layout_width="346dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Current Balance: $ 0.0"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:onClick="BalanceClickRefresh"
        app:layout_constraintBottom_toTopOf="@+id/withDrawDepositBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.428"
        app:layout_constraintHorizontal_bias="0.421" />

    <Button
        android:id="@+id/withDrawDepositBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="392dp"
        android:layout_height="59dp"
        android:background="@android:color/holo_blue_light"
        android:lineSpacingExtra="8sp"
        android:onClick="WithdrawDepositBtnClick"
        android:text="Withdraw &amp; Deposit"
        android:textSize="24sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="-2dp"
        app:layout_constraintBottom_toTopOf="@+id/transferMoneyBtn"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/transferMoneyBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="392dp"
        android:layout_height="57dp"
        android:background="@android:color/holo_blue_light"
        android:lineSpacingExtra="8sp"
        android:onClick="transferMoneyClick"
        android:text="Transfer Money"
        android:textSize="24sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="-2dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/supportBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="388dp"
        android:layout_height="63dp"
        android:background="@android:color/holo_blue_light"
        android:lineSpacingExtra="8sp"
        android:text="QR"
        android:textSize="24sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="384dp"
        android:onClick="qrClick"/>

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="388dp"
        android:layout_height="63dp"
        android:background="@android:color/holo_blue_light"
        android:lineSpacingExtra="8sp"
        android:onClick="supportClick"
        android:text="View Statement"
        android:textSize="24sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toTopOf="@+id/supportBtn"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="384dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_blue_light"
        android:lineSpacingExtra="8sp"
        android:onClick="manageAccountClick"
        android:text="Manage Account"
        android:textSize="24sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        android:layout_marginBottom="14dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/currentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="3dp" />
</android.support.constraint.ConstraintLayout>
