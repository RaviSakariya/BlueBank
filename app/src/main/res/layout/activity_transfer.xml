    <TextView
        android:id="@+id/textView5"
        android:layout_width="465dp"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:text="Account to transfer too: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/currentBalanceTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="179dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="131dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:text="Amount: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="89dp"
        app:layout_constraintTop_toTopOf="@+id/personNameEdit" />

    <EditText
        android:id="@+id/personNameEdit"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Full Name of the person to transfer"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/editAmount"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="188dp"
        android:layout_height="45dp"
        android:layout_marginTop="27dp"
        android:text="Transfer"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.497" />

    <TextView
        android:id="@+id/currentBalanceTxt"
        android:layout_width="346dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="You Have: $ 0.0"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView14"
        tools:layout_constraintTop_creator=""
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/submitBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="239dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="doTransactionClick"
        android:text="Transfer $"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAmount"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

